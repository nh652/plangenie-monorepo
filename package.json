{
  "name": "plangenie-monorepo",
  "version": "1.0.0",
  "description": "The main package file for the PlanGenie application.",
  "main": "index.js",
  "scripts": {
    "start:backend": "node index.js",
    "start:frontend": "cd plangenie-frontend && npm start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "postinstall": "npm install --prefix plangenie-frontend"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
